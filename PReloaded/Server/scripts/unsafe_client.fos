#define TRACK_OWN_CARS_ONLY         (false)

//  Export to main
void SendCarInfoToPlayer(Critter& player) {
    if (!valid(player)) {
        //Log("###### WARNING: ####### player not found when sending car info.");
        return;
    }
    //player.Say(SAY_NETMSG, "sendCarInfoToPlayer called!");
    //Log("sendCarInfoToPlayer called!");
    Map@ map = player.GetMap();
    if (!valid(map))
        return;

    array<int> cars;
    string ownerList = "";
    bool foundValidCars = false;
    array<Item@> carsOnMap;
    uint carsCount = map.GetItemsByType(ITEM_TYPE_CAR, carsOnMap);

    if (carsCount > 0) {
        for(int i = 0, j = carsCount; i < j; i++) {
            Item@ car = carsOnMap[i];
            if (valid(car)) {
                string ownerName = "N/A";
                if (car.Val6 > 0) {
                    Critter@ owner = GetCritter(car.Val6);
                    if (valid(owner)) {
                        ownerName = owner.Name;
                    } else {
                        if (valid(car)) {
                            //Log("valid(car)");
                            //Log("car = " + car);
                            //Log("car.Val6 = " + car.Val6);
                            ownerName = GetPlayerName(car.Val6);
                            //Log("ownerName = ?");
                        } else {
                            //Log("invalid(car)");
                            ownerName = "Unknown";
                        }
                    }
                }
                //Log("Found car on (" + entires[i].HexX + ", " + entires[i].HexY + ") type = " + GetCarTypeName(car.Proto.ProtoId) + " , owner = " + ownerName);
                if (!TRACK_OWN_CARS_ONLY || player.Id == uint(car.Val6)) {
                    //Log("Adding car to array: " + car.Id);
                    //player.Say(SAY_NETMSG, "SendCarInfoToPlayer - Adding car to array: id = " + car.Id + "(" + entires[i].HexX + ", " + entires[i].HexY + ") type = " + GetCarTypeName(car.Proto.ProtoId) + " , owner = " + ownerName);
                    foundValidCars = true;
                    InsertCarsIntoDataArray(cars, car);
                    if (ownerList.length() > 0) {
                        ownerList += ",";
                    }
                    ownerList += ownerName;
                }
            }
        }
    } else {
        //player.Say(SAY_NETMSG, "No parking spots found.");
        //Log("No parking spots found.");
    }
    //  if we send empty string over to client, the server will nullify the pointer to it and client will log null ptr exception
    //  and not clear car names when map has no cars, this is why "No cars." is sent if empty
    player.RunClientScript("client_main@_ShowCarOwnerIndicator", 0, 0, 0, foundValidCars ? ownerList : "No cars.", cars);
}

