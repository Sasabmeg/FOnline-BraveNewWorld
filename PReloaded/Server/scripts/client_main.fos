// Main loop function. Returned time of next call in milliseconds.
uint loop()
{
    GUI_Update(LOOP_TIME);

    if(IsReplaying())
        Replay();

    BroadcastProcess();
    if(isGMT)
        GMToolsProcess();

    if( __WorldmapActive )
        EncountersProcess();

    return LOOP_TIME;     // defined in _client_defines.fos
}

