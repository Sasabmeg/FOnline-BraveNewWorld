void _SetChosenActions(int, int, int, string@, array<int>@ data)
{
    array<uint> actions;
    for(uint a = 0, aLen = data.length(); a < aLen; a++)
    {
        if(data[a] < 0)
            return;
        else
            actions.insertLast(data[a]);
    }
    SetChosenActions(actions);
}

